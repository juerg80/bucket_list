<div class="card">
  <div class="card__thumb">
    <a href="<%= idea_path( idea ) %>">
      <%= render(partial: 'idea_photo', locals: { photo_url: photo_url}) %>
      <div class="card__intro">
        <h4 class="card__title"><%= title %></h4>
        <span><%= done_count %> have done this</span>
      </div>
    </a>
  </div>
  <div class="card__footer">
    <button class="card__btn card__like delta" data-like="see-the-northern-lights">
      <svg class="icon-delete" role="presentation">
        <use href="<%= image_path('icons/icons-defs.svg') %>#heart"></use>
      </svg>
      Like
    </button>
    <% if(logged_in?) %>
      <%= form_tag(user_goals_path(current_user),remote: true, id: "goal-#{idea.id}") do %>
        <%= hidden_field_tag('idea_id', idea.id) %>
        <%= button_tag(class: 'btn delta', type: 'submit') do %>
          <svg class="icon-heart icon--sm" role="presentation">
            <use href="<%= image_path('icons/icons-defs.svg') %>#pluss"></use>
          </svg>
          Add Goal
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
