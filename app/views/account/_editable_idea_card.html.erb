<div class="card">
  <div class="card__thumb">
    <%= image_tag( photo_url ) %>
    <div class="card__intro">
      <h4 class="card__title"><%= title %></h4>
      <span><%= done_this %> have done this</span>
    </div>
  </div>
  <div class="card__footer">
    <button class="btn delta" type="submit">
      <svg class="icon-delete" role="presentation">
        <use href="../icons/icons-defs.svg#delete"></use>
      </svg>
      Delete
    </button>
    <a class="btn delta" href="<%= edit_idea_path( idea ) %>">
      <svg class="icon-edit" role="presentation">
        <use xlink:href="../icons/icons-defs.svg#edit"></use>
      </svg>
      Edit
    </a>
  </div>
</div>
